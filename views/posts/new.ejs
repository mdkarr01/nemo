<h1>New Post</h1>

<form action="/posts" method="POST" enctype="multipart/form-data">
  <div><input type="text" name="post[title]" placeholder="Title"></div>
  <div><input type="text" name="post[price]" placeholder="Price"></div>
  <div><textarea name="post[description]" placeholder="Description"></textarea></div>
  <div><input type="text" name="post[location]" placeholder="Location"></div>
  <div><input type="file" name="post[image]" placeholder="Image upload" accept="image/*" required></div>
  <input type="hidden" name="MAX_FILE_SIZE" value="100000" />
  <div><input type="submit" value="Submit"></div>
</form>