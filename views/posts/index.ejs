<% layout('layouts/boilerplate') -%>

<h1>Posts Index</h1>

<% posts.forEach(function(post) { %>
<div>
  <h2><%= post.title %>
  </h2>

  <p>
    <%= post.price %>
  </p>
  <p>
    <%= post.description %>
  </p>
  <p>
    <%= post.location %>
  </p>
  <p><a href="/posts/<%= post.id %>">View More</a></p>
</div>
<% }); %>